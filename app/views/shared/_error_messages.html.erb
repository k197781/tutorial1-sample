<% if @user.errors.any? %>
<div class="error_explanation">
    <div class="alert alert-danger">
        The form contains <%= pluralize(@user.errors.count, "error") %>
        <!-- pluralizeは数に応じて"  "(名詞)を変化 -->
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>